<view class='container' style='padding-top:16rpx;'>
  <view class='info info1'>
    <view>
      <input placeholder='请输入机构名称' type="text" />
    </view>
    <view>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
        <view class="picker arr">
          所属行业：{{array[index]}}
        </view>
      </picker>

    </view>    
  </view>
  <view class='info info2'>
    <view>
      <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
        <view class="picker arr">
          所在地：{{region[0]}}，{{region[1]}}，{{region[2]}}
        </view>
      </picker>
    </view>
  </view>
  <view class='info info3'>
    <view>
      <input placeholder='请输入姓名或联系人' type="text" />
    </view>
    <view>
      <input placeholder='请输入手机号' type="number" />
    </view>
    <view>
      <input placeholder='请输入收到的验证码' type="number" class="yzm"/>
      <text>获取验证码</text>
    </view>
  </view>
  <view class='info info4'>
    <view>
      <checkbox-group bindchange="checkboxChange">
        <label class="checkbox">
          <checkbox value="1" checked="true"/>阅读并同意<text style='float:none;'>《用户协议》</text>
        </label>
      </checkbox-group>
    </view>
  </view>

  <view class='btnBox'>
    <button type="primary"> 提交信息 </button>
  </view>

</view>
